@model Tickets.Models.Comentario

<h3>
    <a asp-action="Details" asp-route-Id="@Model.ChamadoId" class="btn btn-secondary btn-sm "><i class="fas fa-chevron-left"></i></a>
    Tem certeza que deseja excluir o comentário?</h3>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">Título</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>
        <dt class = "col-sm-2">Descrição</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Descricao)</dd>
        <dt class = "col-sm-2">Autor</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Autor.Nome)</dd>
        <dt class = "col-sm-2">Data</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Data)</dd>
        <dt class = "col-sm-2">Chamado</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Chamado.Titulo)</dd>
    </dl>
    
    <form asp-action="ExcluirComentario">
        <input type="hidden" asp-for="Id" />        
        <div class="form-group">
            <button type="submit" class="btn btn-danger btn-sm" ><i class="fas fa-trash-alt"></i> Excluir</button>            
        </div>
    </form>
</div>
